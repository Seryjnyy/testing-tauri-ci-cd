{
  "$schema": "../../../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build-frontend",
    "beforeDevCommand": "npm run dev-frontend",
    "devPath": "http://localhost:5174",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "txt-viewer",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true
      },
      "path": {
        "all": true
      },
      "fs": {
        "writeFile": true,
        "readDir": true,
        "readFile": true,
        "exists": true,
        "createDir": true,
        "removeDir": false,
        "removeFile": false,
        "scope": [
          "$APPCONFIG",
          "$APPCONFIG/*",
          "$APPCONFIG/config",
          "$APPCONFIG/config/*"
        ]
      },
      "dialog": {
        "all": true,
        "open": true
      },
      "shell": {
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "category": "Productivity",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "app.txt-viewer",
      "longDescription": "A better way to view Windows notes.",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "Note viewer.",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 800,
        "minWidth": 800,
        "minHeight": 500,
        "resizable": true,
        "title": "txt-viewer",
        "width": 800,
        "decorations": false

      }
    ]
  }
}
